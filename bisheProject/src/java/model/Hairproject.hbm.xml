<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.Hairproject" table="hairproject" schema="ssh">
        <id name="hairId">
            <column name="hair_id" sql-type="tinyint(2)"/>
        </id>
        <property name="hairService">
            <column name="hair_service" sql-type="varchar(10)" length="10"/>
        </property>
        <property name="basePrice">
            <column name="base_price" sql-type="int(8)"/>
        </property>
        <property name="pDesc">
            <column name="p_desc" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>